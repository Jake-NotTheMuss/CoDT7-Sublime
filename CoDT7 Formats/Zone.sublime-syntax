%YAML 1.2
---
# http://www.sublimetext.com/docs/3/syntax.html

# This file is part of the T7-Sublime project.
# T7-Sublime is an enhanced syntax-highlighting package for (almost) all Call of Duty Black Ops III developer file formats.
# Zone files are used by the Call of Duty fastfile linker. 
# They contain a listed set of asset type-name pairs to include in the fastfile along with some other information relevant to the build.

name: Zone
file_extensions:
  - zone
  - zpkg
  - class
scope: text.codt7.zone

variables:
  # number digits
  bin_digit: '[01]'
  oct_digit: '[0-7]'
  dec_digit: '\d'
  hex_digit: '\h'

  dec_digits: '{{dec_digit}}+'

  # number exponents
  dec_exponent: '(?:[eE][-+]?{{dec_digit}}*)'
  hex_exponent: '(?:[pP][-+]?{{dec_digit}}*)'

  # number suffixes
  bin_suffix: '[2-9a-zA-Z_][[:alnum:]_]*'
  oct_suffix: '[8-9g-zG-Z_][[:alnum:]_]*'
  dec_suffix: '[a-zA-Z_][[:alnum:]_]*'
  hex_suffix: '[g-zG-Z_][[:alnum:]_]*'

  identifier: \b[[:alpha:]_][[:alnum:]_]*\b
  macro_identifier: \b[[:upper:]_][[:upper:][:digit:]_]{2,}\b # only uppercase, at least 3 chars

  asset_types: '(?i:physpreset|physconstraints|destructibledef|xanim|xmodel|xmodelmesh|material|computeshaderset|techset|image|sound|sound_patch|col_map|com_map|game_map|map_ents|gfx_map|lightdef|lensflaredef|ui_map|font|fonticon|weapon|weapondef|weaponvariant|weaponfull|cgmediatable|playersoundstable|playerfxtable|sharedweaponsounds|attachment|attachmentunique|weaponcamo|customizationtable|customizationtable_feimages|customizationtablecolor|snddriverglobals|tagfx|impactsfxtable|impactsoundstable|player_character|aitype|character|xmodelalias|structuredtable|leaderboarddef|ddl|glasses|texturelist|vehicle|addon_map_ents|tracer|slug|surfacefxtable|surfacesounddef|footsteptable|entityfximpacts|entitysoundimpacts|zbarrier|vehiclefxdef|vehiclesounddef|typeinfo|scriptbundle|scriptbundlelist|rumble|bulletpenetration|locdmgtable|aimtable|animselectortable|animmappingtable|animstatemachine|behaviortree|behaviorstatemachine|sanim|lightdescription|shellshock|xcam|bgcache|texturecombo|flametable|attachmentcosmeticvariant|maptable|maptableloadingimages|medal|medaltable|objective|objectivelist|umbra_tome|navmesh|navvolume|binaryhtml|laser|beam)'
  raw_types: '(?i:localize|rawfile|stringtable|scriptparsetree|keyvaluepairs|ttf|fx|klf|bitfield|streamerhint)'

  all_types: '{{asset_types}}|{{raw_types}}'

  header_identifiers: 'mode|type|expect|scriptbundle|class|group|title|delta'
  header_constants: 'true|false|ship|core|cp|mp|zm|common|core_common|cp_common|mp_common|zm_common|level|modtools|cp_level|mp_level|zm_level|cp_mod_level|mp_mod_level|zm_mod_level'

  global_identifiers: 'level|linker|scriptbundlelist'

  meta_directives: 'include|ignore|ignore_type|ignore_missing_shipped'
  meta_directive_keywords: 'all|reset'

contexts:
  main:
    - include: preprocessor-global
    - include: global


         ###   ###    ## ##    ## ##    ###   #     #
        #     #   #  #  #  #  #  #  #  #   #  ##    #
        #     #   #  #  #  #  #  #  #  #   #  # #   #
        #     #   #  #  #  #  #  #  #  #   #  #  #  #
        #     #   #  #  #  #  #  #  #  #   #  #   # #
        #     #   #  #  #  #  #  #  #  #   #  #    ##
         ###   ###   #  #  #  #  #  #   ###   #     #

  strings:
    - match: '"'
      scope: punctuation.definition.string.begin.codt7.zone
      push:
        - meta_scope: string.quoted.double.codt7.zone
        - match: '"'
          scope: punctuation.definition.string.end.codt7.zone
          pop: true

  numbers:
    # decimal float
    - include: scope:source.codt7.common#numbers

  comments:
    - include: scope:source.codt7.common#comments

  preprocessor-disabled:
    - include: scope:source.codt7.common#preprocessor-disabled

  preprocessor-line-continuation:
    - include: scope:source.codt7.common#preprocessor-line-continuation

  preprocessor-line-ending:
    - include: scope:source.codt7.common#preprocessor-line-ending

  preprocessor-comments:
    - include: scope:source.codt7.common#preprocessor-comments

  ###   ###   ####  ###   ###     ###    ###  ####   ###   ###    ###   ###
  #  #  #  #  #     #  #  #  #   #   #  #     #     #     #      #   #  #  #
  #  #  #  #  #     #  #  #  #   #   #  #     #     #     #      #   #  #  #
  ###   ###   ####  ###   ###    #   #  #     ####   ###   ###   #   #  ###
  #     # #   #     #     # #    #   #  #     #         #     #  #   #  # #
  #     #  #  #     #     #  #   #   #  #     #         #     #  #   #  #  #
  #     #   # ####  #     #   #   ###    ###  ####   ###   ###    ###   #   #


                   ###  #      ###  ###    #   #
                  #     #     #   # #  #  # #  #
                  #     #     #   # #  # #   # #
                  #  ## #     #   # ###  ##### #
                  #   # #     #   # #  # #   # #
                  #   # #     #   # #  # #   # #
                   ###  #####  ###  ###  #   # #####



  preprocessor-global:
    - include: preprocessor-rule-enabled-global
    - include: preprocessor-rule-disabled-global
    - include: preprocessor-rule-other-global

  preprocessor-rule-enabled-global:
    - match: ^\s*((#\s*if)\s+(?i:(1)|(true)))\b
      captures:
        1: meta.preprocessor.codt7.zone
        2: keyword.control.import.codt7.zone
        3: meta.number.integer.decimal.codt7.zone constant.numeric.value.codt7.zone
        4: constant.language.codt7.zone
      push:
        - match: '^\s*(#\s*endif)\b'
          captures:
            1: meta.preprocessor.codt7.zone keyword.control.import.codt7.zone
          pop: true
        - match: '^\s*(#\s*else)\b'
          captures:
            1: meta.preprocessor.codt7.zone keyword.control.import.else.codt7.zone
          push:
            - meta_content_scope: comment.block.preprocessor.else-branch.codt7.zone
            - match: '(?=^\s*#\s*endif\b)'
              pop: true
            - include: preprocessor-disabled
        - match: ""
          push:
            - match: '(?=^\s*#\s*(else|endif)\b)'
              pop: true
            - include: preprocessor-global
            - include: global

  preprocessor-rule-disabled-global:
    - match: ^\s*((#\s*if)\s+(?i:(0)|(false)))\b
      captures:
        1: meta.preprocessor.codt7.zone
        2: keyword.control.import.codt7.zone
        3: meta.number.integer.decimal.codt7.zone constant.numeric.value.codt7.zone
        4: constant.language.codt7.zone
      push:
        - match: '^\s*(#\s*endif)\b'
          captures:
            1: meta.preprocessor.codt7.zone keyword.control.import.codt7.zone
          pop: true
        - match: '^\s*(#\s*else)\b'
          captures:
            1: meta.preprocessor.codt7.zone keyword.control.import.else.codt7.zone
          push:
            - match: (?=^\s*#\s*endif\b)
              pop: true
            - include: preprocessor-global
            - include: global
        - match: ""
          push:
            - meta_scope: comment.block.preprocessor.if-branch.codt7.zone
            - match: (?=^\s*#\s*(else|endif)\b)
              pop: true
            - include: preprocessor-disabled

  preprocessor-rule-other-global:
    - match: ^\s*(#\s*(?:if|ifdef|ifndef))\b
      captures:
        1: keyword.control.import.codt7.zone
      push:
        - meta_scope: meta.preprocessor.codt7.zone
        - include: preprocessor-line-continuation
        - include: preprocessor-comments
        # Enter a new scope where all elif/else branches have their
        # contexts popped by a subsequent elif/else/endif. This ensures that
        # preprocessor branches don't push multiple meta.block scopes on 
        # the stack, thus messing up the "global" context's detection of
        # functions.
        - match: $\n
          set: preprocessor-if-branch-global

  # These gymnastics here ensure that we are properly handling scope even
  # when the preprocessor is used to create diferent scope beginnings, such
  # as a different if/while condition
  preprocessor-if-branch-global:
    - match: ^\s*(#\s*endif)\b
      captures:
        1: meta.preprocessor.codt7.zone keyword.control.import.codt7.zone
      pop: true
    - match: (?=^\s*#\s*(elif|else)\b)
      push: preprocessor-elif-else-branch-global
    - include: preprocessor-global
    - include: global

  preprocessor-elif-else-branch-global:
    - match: '(?=^\s*(#\s*endif)\b)'
      pop: true
    - include: preprocessor-global
    - include: global


  ###   ###   ####  ###   ###     ###    ###  ####   ###   ###    ###   ###
  #  #  #  #  #     #  #  #  #   #   #  #     #     #     #      #   #  #  #
  #  #  #  #  #     #  #  #  #   #   #  #     #     #     #      #   #  #  #
  ###   ###   ####  ###   ###    #   #  #     ####   ###   ###   #   #  ###
  #     # #   #     #     # #    #   #  #     #         #     #  #   #  # #
  #     #  #  #     #     #  #   #   #  #     #         #     #  #   #  #  #
  #     #   # ####  #     #   #   ###    ###  ####   ###   ###    ###   #   #


      #### #     # ###  ###   ####   ###   ###  #  ###  #     #  ###
      #     #   #  #  # #  #  #     #     #     # #   # ##    # #
      #      # #   #  # #  #  #     #     #     # #   # # #   # #
      ####    #    ###  ###   ####   ###   ###  # #   # #  #  #  ###
      #      # #   #    # #   #         #     # # #   # #   # #     #
      #     #   #  #    #  #  #         #     # # #   # #    ##     #
      #### #     # #    #   # ####   ###   ###  #  ###  #     #  ###



  preprocessor-expressions:
    - include: preprocessor-macro-define
    - include: preprocessor-other

  preprocessor-macro-define:
    - match: ^\s*(#\s*define)\b
      captures:
        1: meta.preprocessor.macro.codt7.zone keyword.control.import.define.codt7.zone
      push:
        - meta_content_scope: meta.preprocessor.macro.codt7.zone
        - include: preprocessor-line-continuation
        - include: preprocessor-line-ending
        - include: preprocessor-comments
        - match: '({{identifier}})(?=\()'
          scope: entity.name.function.preprocessor.codt7.zone
          set:
            - match: \(
              scope: punctuation.section.group.begin.codt7.zone
              set: preprocessor-macro-params
        - match: '{{identifier}}'
          scope: entity.name.constant.preprocessor.codt7.zone
          set: preprocessor-macro-definition

  preprocessor-macro-params:
    - meta_scope: meta.preprocessor.macro.parameters.codt7.zone meta.group.codt7.zone
    - match: '{{identifier}}'
      scope: variable.parameter.codt7.zone
    - match: \)
      scope: punctuation.section.group.end.codt7.zone
      set: preprocessor-macro-definition
    - match: ','
      scope: punctuation.separator.codt7.zone
      push:
        - match: '{{identifier}}'
          scope: variable.parameter.codt7.zone
          pop: true
        - include: preprocessor-line-continuation
        - include: preprocessor-comments
        - match: '(?=\))'
          pop: true
        - match: (/\*).*(\*/)
          scope: comment.block.codt7.zone
          captures:
            1: punctuation.definition.comment.codt7.zone
            2: punctuation.definition.comment.codt7.zone
        - match: '\S+?'
          scope: invalid.illegal.unexpected-character.codt7.zone
    - include: preprocessor-line-continuation
    - include: preprocessor-comments
    - match: (/\*).*(\*/)
      scope: comment.block.codt7.zone
      captures:
        1: punctuation.definition.comment.codt7.zone
        2: punctuation.definition.comment.codt7.zone
    - match: '\S+?'
      scope: invalid.illegal.unexpected-character.codt7.zone
    - match: $\n
      scope: invalid.illegal.unexpected-end-of-line.codt7.zone

  preprocessor-macro-definition:
    - meta_content_scope: meta.preprocessor.macro.codt7.zone
    - include: preprocessor-line-continuation
    - include: preprocessor-line-ending
    - include: preprocessor-comments
    - include: expressions

  preprocessor-other:
    - match: '^\s*(#\s*(?:if|ifdef|ifndef|elif|else|undef))\b'
      captures:
        1: keyword.control.import.codt7.zone
      push:
        - meta_scope: meta.preprocessor.codt7.zone
        - include: preprocessor-line-continuation
        - include: preprocessor-line-ending
        - include: preprocessor-comments
    - match: ^\s*(#\s*endif)\b
      captures:
        1: meta.preprocessor.codt7.zone keyword.control.import.codt7.zone
    - match: ^\s*(#\s*include)\b
      captures:
        1: keyword.control.import.include.codt7.zone
      push:
        - meta_scope: meta.preprocessor.include.codt7.zone
        - include: preprocessor-line-continuation
        - include: preprocessor-line-ending
        - include: preprocessor-comments
        - match: '"'
          scope: punctuation.definition.string.begin.codt7.zone
          push:
            - meta_scope: string.quoted.double.include.codt7.zone
            - match: '"'
              scope: punctuation.definition.string.end.codt7.zone
              pop: true


                   ###  #      ###  ###     #   #
                  #     #     #   # #  #   # #  #
                  #     #     #   # #  #  #   # #
                  #  ## #     #   # ###   ##### #
                  #   # #     #   # #  #  #   # #
                  #   # #     #   # #  #  #   # #
                   ###  #####  ###  ###   #   # #####

  global:
    - include: global-constants
    - include: expressions
    - include: meta-directives
    - include: assets

  global-constants:
    - match: '\b(ZONENAME)\b'
      scope: support.constant.codt7.zone

  expressions:
    - include: preprocessor-expressions
    - include: comments
    - include: header-directive

  header-directive:
    - match: '\s*(?=>)'
      push:
        - match: '>'
          scope: punctuation.header-directive.codt7.zone
          set:
            - meta_scope: meta.header.codt7.zone
            - match: '\b({{global_identifiers}})\b'
              captures:
                1: constant.language.codt7.zone
              push:
                - match: (?=\s*,|$\n)
                  pop: true
                - match: '\.'
                  scope: punctuation.accessor.codt7.zone
                - match: '{{identifier}}'
                  scope: variable.parameter
            - match: '\b({{header_identifiers}})\b'
              scope: keyword.other.codt7.zone markup.italic
            - match: ','
              scope: punctuation.separator.codt7.zone
              set:
                - meta_content_scope: meta.header.codt7.zone
                - match: $\n
                  pop: true
                - include: global-constants
                - match: '\b({{header_constants}})\b'
                  scope: constant.language.codt7.zone
                - include: numbers
            - match: $\n
              pop: true

  meta-directives:
    - match: '^\s*({{meta_directives}})\b'
      captures:
        1: keyword.other.codt7.zone markup.italic
      push:
        - meta_scope: meta.directive.codt7.zone
        - match: $\n
          pop: true
        - match: ','
          scope: punctuation.separator.codt7.zone
        - match: '\b({{meta_directive_keywords}})\b'
          scope: variable.language.codt7.zone
        - match: '\|\-'
          scope: keyword.operator.codt7.zone
        - include: asset-type-in-line

  asset-name:
    - match: ','
      scope: punctuation.separator.codt7.zone
      push:
        - meta_content_scope: meta.asset-name.codt7.zone
        - match: $\n
          scope: meta.asset-name.codt7.zone
          pop: true
        - match: ','
          scope: invalid.illegal.unexpected-character.codt7.zone

  asset:
    - include: asset-type
    - include: asset-name

  assets:
    - include: raw-asset
    - include: asset

  asset-type:
    - match: '^\s*(?:({{asset_types}})|({{raw_types}}))\b'
      captures:
        1: entity.name.type.codt7.zone markup.italic
        2: support.type.codt7.zone markup.italic

  asset-type-in-line:
    - match: '\b(?:({{asset_types}})|({{raw_types}}))\b'
      captures:
        1: entity.name.type.codt7.zone markup.italic
        2: support.type.codt7.zone markup.italic

  extra-comma:
    - match: ','
      scope: invalid.illegal.unexpected-character.codt7.zone

  raw-asset:
    - include: scriptparsetree
    - include: stringtable
    # - include: fx
    # - include: ttf
    # - include: bitfield
    # - include: klf

  asset-generic:
    - match: $\n
      pop: true
    - include: asset-type
    - match: ','
      scope: punctuation.separator.codt7.zone
      push:
        - meta_content_scope: meta.asset-name.codt7.zone
        - match: $\n
          scope: meta.asset-name.codt7.zone
          pop: 2
        - include: extra-comma

  scriptparsetree:
    - match: (?=^\s*(?i:scriptparsetree)\b)
      push:
        - meta_scope: meta.scriptparsetree.codt7.zone
        - include: asset-generic

  stringtable:
    - match: (?=^\s*(?i:stringtable)\b)
      push:
        - meta_scope: meta.stringtable.codt7.zone
        - include: asset-generic

  fx:
    - match: (?=^\s*(?i:fx)\b)
      push:
        - meta_scope: meta.fx.codt7.zone
        - include: asset-generic

  ttf:
    - match: (?=^\s*(?i:ttf)\b)
      push:
        - meta_scope: meta.ttf.codt7.zone
        - include: asset-generic

  bitfield:
    - match: (?=^\s*(?i:bitfield)\b)
      push:
        - meta_scope: meta.bitfield.codt7.zone
        - include: asset-generic

  klf:
    - match: (?=^\s*(?i:klf)\b)
      push:
        - meta_scope: meta.klf.codt7.zone
        - include: asset-generic
