    - meta_content_scope: meta.col-entity-context-type-2.codt7.table.sound.ambient
    - include: context_type
    - match: ','
      scope: punctuation.separator.codt7.table.sound.ambient
      set: entitycontextvalue2

  entitycontextvalue2:
    - meta_content_scope: meta.col-entity-context-value-2.codt7.table.sound.ambient
    - include: context_value
    - match: ','
      scope: punctuation.separator.codt7.table.sound.ambient
